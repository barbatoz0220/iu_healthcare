extends ../index.pug

block metadata
  meta(charset='UTF-8')
  meta(name="viewport" content="width=device-width, initial-scales=1.0")
  // CSS scripts
  link(rel="stylesheet" href="/styles/navBar.css")
  //link(rel="stylesheet" href="/styles/index.css")
  link(rel="stylesheet" href="/styles/patientHome.css")
  link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.15.1/css/all.css'
  integrity='sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp' crossorigin='anonymous')

  script(src="https://code.jquery.com/jquery-3.5.1.min.js")
  script.
    $(function(){
      $(".toggle").on("click", function(){
        if($(".item").hasClass("active")){
          $(".item").removeClass("active");
        } else {
          $(".item").addClass("active");
          $(".item").animate({transition: "0.5s"});
        }
      })
    });

block navBar
  nav 
    ul.menu
      a.hmsLogo(href="logo") HMS25 
        i.fas.fa-hospital-symbol
      li.item
        a.navBar(href="") Home
      li.item
        a.navBar(href="about") About
      li.item
        a.navBar(href="contacts") Contacts
      li.item
        a.navBar(href="logout") Log out
      li.item.button
        a.emergency(href="emergency") Emergency   
          i.fas.fa-ambulance
      li.toggle
        span.bars

block main
  main.container
    section.sidebar
      div.profile
        img.avatar(src="images/patient1.jpg" alt="Avatar")
        each patient in patients
          h1.name #{patient.NAME}

      div.grid.patientInfo
        each patient in patients
          h2.field_name Gender:
          span.field= patient.GENDER
          h2.field_name Date of Birth:
          span.field= patient.DOB
          h2.field_name Telephone:
          span.field= patient.PHONE

    section.content#main
      div.grid.doctor
        
        h1.icon View Your Doctor 
          i.fas.fa-stethoscope

        div.doctorInfo
          each doctor in doctors
            br
            span= doctor.NAME
            br
            span= doctor.GENDER
            br
            span= doctor.DOB
            br
            span= doctor.PHONE

      div.grid.visit 
        h1.icon Your Visit History 
          i.fas.fa-history
          ul
            each visit in visits
              li= visit.ID






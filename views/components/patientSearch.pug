section.content#main
    if errorMessage
        h4= errorMessage
    if diseases
        h4 Successful search for diseases
    if diseases
        each disease in diseases
            h3 Disease ID #{diseaseID}
            h3= diseaseName
            h3= diseaseDesc
            h3 Recommended precautions
            p= precautions 
    div.search_bar
        form(action='/patient/search-symptom' method='POST')
            input#symptoms.form-control(type='text' placeholder='(e.g.`depression, fatigue, cough, etc.`)' name='symptoms')
            button.search-button(type='submit') Search

    a(href="/logout" class="patient-action")
        button#logout(type="button") Log out

script(type="text/javascript" src="/javascript/patientHome.js")
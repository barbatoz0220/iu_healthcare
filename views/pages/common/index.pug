extends ../structure.pug

block metadata
  meta(charset='UTF-8')
  meta(name="viewport" content="width=device-width, initial-scales=1.0")
  title HMS - HAT 
  // CSS scripts
  link(rel="stylesheet" href="/javascript/alertify/alertify.min.css")
  link(rel="stylesheet" href="/javascript/alertify/default.min.css")
  link(rel="stylesheet" href="/styles/navBar.css")
  link(rel="stylesheet" href="/styles/index.css")
  link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.15.1/css/all.css' integrity='sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp' crossorigin='anonymous')

  // jQuery scripts
  script(src="https://code.jquery.com/jquery-3.5.1.min.js")
  script.
    $(function(){
      $(".toggle").on("click", function(){
        if($(".item").hasClass("active")){
          $(".item").removeClass("active");
        } else {
          $(".item").addClass("active");
          $(".item").animate({transition: "0.5s"});
        }
      })
    })

block navBar
  include ../../components/homeNavBar

block main
  main
  // login form
  block loginForm
    if error
      span(id="error" style="display: none")= error
    div.login-form
      h1 Login Form
      form(action='auth' method='POST')
        input(type='text' name='username' placeholder='Username' required='')
        input(type='password' name='password' placeholder='Password' required='')
        input(type='submit' value="Submit")

  // picture
  block slider
    div.slider
      // container for images
      div.slider__item
        img.slider__image(src="images/pic1.jpg")
        div.slider__text
          h5 Facilities
          p We have the greatest infrastructures possible.

      div.slider__item
        img.slider__image(src="images/pic2.jpg")
        div.slider__text
          h5 Equipment
          p Our latest technologies can help you get better.

      div.slider__item
        img.slider__image(src="images/pic3.jpg")
        div.slider__text
          h5 Staff
          p We have many years of experiences in lots of expertises

      div.slider__item
        img.slider__image(src="images/pic4.jpg")
        div.slider__text
          h5 Join Us
          p Put your faith in us and start leading a happy life

  script(type="text/javascript" src="/javascript/alertify/alertify.min.js")
  script.
    if(document.getElementById("error") != null) {
      var error = document.getElementById("error").textContent;
      alertify.alert(error, function() {
        alertify.message("Please login again!");
      }).set({title: "Login failed!"}).set('closable', false);
    }